    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Data-processing",
            "type": "debugpy",
            "request": "launch",
            "program": "process.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2",
                "--dataset",
                "easy-vqa",
                "--train",
                "train[:100]",
                "--val",
                "val[:30]"
            ]
        },
        {
            "name": "Fine-tune, using pytorch, blip2 on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "finetune.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2",
                "--dataset",
                "easy-vqa",
                "--train",
                "train[:350]",
                "--val",
                "val[:300]"
            ]
        },
        {
            "name": "Test, using pytorch, blip2 on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2",
                "--dataset",
                "easy-vqa"
            ]
        },
        {
            "name": "Fine tune BLIP 2 using lightning",
            "type": "debugpy",
            "request": "launch",
            "program": "finetune.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2",
                "--dataset",
                "easy-vqa",
                "--train",
                "train[:100]",
                "--val",
                "val[:30]",
                "--use-lightning"
            ]
        },
        {
            "name": "Show a few sample images",
            "type": "debugpy",
            "request": "launch",
            "program": "inference.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}