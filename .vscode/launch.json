    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Fine-tune blip2 on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "finetune.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-generator",
                "--dataset",
                "easy-vqa",
                "--train-split",
                "train[:30]",
                "--val-split",
                "val[:30]",
                // "--resume-training"
            ]
        },
        {
            "name": "Fine-tune classifier on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "finetune.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-classifier",
                "--dataset",
                "easy-vqa",
                "--train-split",
                "train[:80]",
                "--val-split",
                "train[:80]",
                //"--resume-training"
            ]
        },
        {
            "name": "Fine tune base classifier on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "finetune.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-base-classifier",
                "--dataset",
                "easy-vqa",
                "--train-split",
                "train[:85]",
                "--val-split",
                "train[:80]",
                // "--resume-training"
            ]
        },
        {
            "name": "Test, blip2-generator on easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-generator",
                "--dataset",
                "easy-vqa",
                "--test-split",
                "test[:30]"
            ]
        },
        {
            "name": "Test, blip2-classifier on classification easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-classifier",
                "--dataset",
                "easy-vqa",
                "--test-split",
                "test[:30]",
            ]
        },
        {
            "name": "Test, blip2-base-classifier on classification base easy-vqa dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "--model",
                "blip2-base-classifier",
                "--dataset",
                "easy-vqa",
                "--test-split",
                "test[:30]",
            ]
        },
        {
            "name": "Show a few sample images",
            "type": "debugpy",
            "request": "launch",
            "program": "inference.py",
            "console": "integratedTerminal",
        },
    ]
}